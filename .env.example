# Docker Compose environment variables
# Copy to .env and fill in real values
POSTGRES_PASSWORD=CHANGE_ME
REDIS_PASSWORD=CHANGE_ME
JWT_SECRET=CHANGE_ME_generate_with_openssl_rand_hex_32
NODE_ENV=production
MAX_CONCURRENT_GAMES=20

# Frontend Configuration
# URLs for the game client to connect to the backend
# For local Docker: http://localhost:3001 and ws://localhost:3001
# For cloud: https://api.yourdomain.com and wss://api.yourdomain.com
VITE_API_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:3001

# Client Port (port to expose the web client on)
CLIENT_PORT=8080

# CORS Configuration
# Origin(s) allowed to connect to the game server
# For local Docker: http://localhost:8080
# For cloud: https://yourdomain.com (where the game client is hosted)
# For multiple origins, separate with commas: https://game.com,https://www.game.com
ALLOWED_ORIGIN=http://localhost:8080
