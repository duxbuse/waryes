{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Unit Stats Schema",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the unit."
    },
    "name": {
      "type": "string",
      "description": "Display name of the unit."
    },
    "cost": {
      "type": "integer",
      "minimum": 0,
      "description": "Resource cost to deploy the unit."
    },
    "icon": {
      "type": "string",
      "description": "Path to the unit icon."
    },
    "health": {
      "type": "integer",
      "minimum": 1,
      "description": "Model count for infantry, Integrity points for vehicles."
    },
    "speed": {
      "type": "object",
      "properties": {
        "road": {
          "type": "integer",
          "minimum": 0
        },
        "offRoad": {
          "type": "integer",
          "minimum": 0
        },
        "rotation": {
          "type": "integer",
          "minimum": 0
        }
      },
      "required": [
        "road",
        "offRoad"
      ],
      "description": "Maximum speed in km/h."
    },
    "armor": {
      "type": "object",
      "properties": {
        "front": {
          "type": "integer",
          "minimum": 0
        },
        "side": {
          "type": "integer",
          "minimum": 0
        },
        "rear": {
          "type": "integer",
          "minimum": 0
        },
        "top": {
          "type": "integer",
          "minimum": 0
        }
      },
      "required": [
        "front",
        "side",
        "rear",
        "top"
      ],
      "description": "Armor thickness in mm RHAe."
    },
    "fuel": {
      "type": [
        "integer",
        "null"
      ],
      "minimum": 0,
      "description": "Fuel capacity in Liters. Optional for infantry."
    },
    "autonomy": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "road": {
          "type": "integer",
          "minimum": 0
        },
        "offRoad": {
          "type": "integer",
          "minimum": 0
        }
      },
      "description": "Operational range in km based on fuel."
    },
    "optics": {
      "type": "string",
      "enum": [
        "Poor",
        "Normal",
        "Good",
        "Very Good",
        "Exceptional"
      ],
      "description": "Spotting capability tier."
    },
    "stealth": {
      "type": "string",
      "enum": [
        "None",
        "Poor",
        "Medium",
        "Good",
        "Exceptional"
      ],
      "description": "Visibility reduction tier."
    },
    "forwardDeploy": {
      "type": "integer",
      "minimum": 0,
      "default": 0,
      "description": "Max deployment distance outside zone in meters."
    },
    "category": {
      "type": "string",
      "description": "Unit category (TNK, INF, HEL, etc)."
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Tags describing unit characteristics."
    },
    "isCommander": {
      "type": "boolean",
      "default": false,
      "description": "Whether this unit functions as a commander."
    },
    "commanderAuraRadius": {
      "type": "integer",
      "minimum": 0,
      "default": 0,
      "description": "Radius in meters for commander aura effect."
    },
    "transportCapacity": {
      "type": "integer",
      "minimum": 0,
      "default": 0,
      "description": "Number of units this vehicle can transport."
    },
    "canBeTransported": {
      "type": "boolean",
      "default": false,
      "description": "Whether this unit can be loaded into a transport."
    },
    "transportSize": {
      "type": "integer",
      "minimum": 0,
      "default": 1,
      "description": "How much transport capacity this unit uses."
    },
    "veterancyBonus": {
      "type": "number",
      "minimum": 0,
      "default": 0.1,
      "description": "Bonus multiplier per veterancy level."
    },
    "weapons": {
      "type": "array",
      "description": "List of weapons equipped on the unit.",
      "items": {
        "type": "object",
        "properties": {
          "weaponId": {
            "type": "string",
            "description": "Unique identifier of the weapon."
          },
          "count": {
            "type": "integer",
            "minimum": 1,
            "default": 1,
            "description": "Number of instances of this weapon."
          },
          "maxAmmo": {
            "type": "integer",
            "minimum": 0,
            "description": "Maximum ammunition capacity for this weapon."
          },
          "turretMounted": {
            "type": "boolean",
            "default": false,
            "description": "Whether weapon is mounted on a turret."
          }
        },
        "required": [
          "weaponId",
          "maxAmmo"
        ]
      }
    }
  },
  "required": [
    "id",
    "name",
    "cost",
    "health",
    "speed",
    "armor",
    "optics",
    "stealth",
    "category"
  ]
}
